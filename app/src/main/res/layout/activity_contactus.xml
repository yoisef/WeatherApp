<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Contactus">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout_weight="1">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerInParent="true"
            android:src="@drawable/prof"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_weight="2">
        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_margin="3dp"
            android:textSize="@dimen/middle"
            android:text="@string/Contactdeta"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:background="@color/black"
            android:layout_weight="1"
            android:layout_height="0dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/middle"
                android:text="Telephone :"
                android:layout_margin="3dp"
                android:id="@+id/tel"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/middle"
                android:layout_margin="3dp"
                android:id="@+id/num"
                android:text="+201010478215"
                android:layout_toRightOf="@id/tel"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="3dp"
                android:layout_below="@id/tel"
                android:id="@+id/link"
                android:textStyle="bold"
                android:text="Email :"
                android:textSize="@dimen/middle"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/link"
                android:layout_below="@id/num"
                android:layout_margin="3dp"
                android:id="@+id/emid"
                android:textSize="@dimen/mid"
                android:textColor="@color/white"
                android:text="yosfessam2010@yahoo.com"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:text="Country :"
                android:layout_margin="3dp"
                android:id="@+id/coid"
                android:textSize="@dimen/middle"
                android:textStyle="bold"
                android:layout_below="@id/link"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Egypt"
                android:textSize="@dimen/middle"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/coid"
                android:layout_margin="3dp"
                android:layout_below="@id/emid"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/linkedin"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="10dp"
                android:src="@drawable/linkedi"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/github"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"
                android:layout_centerInParent="true"
                android:src="@drawable/git"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>


        </RelativeLayout>
    </LinearLayout>

</LinearLayout>